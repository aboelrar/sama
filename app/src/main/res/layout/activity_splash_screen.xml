<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".view.splashScreen">



    <ImageView
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/splash"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="#0284AE"
            android:prompt="@string/chooselanguage"></Spinner>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignTop="@+id/country"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_12sdp"
            app:srcCompat="@drawable/ic_expand_more_white_24dp"
            tools:ignore="RtlCompat" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اللغه"
        android:textSize="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="@android:color/black"
        />
    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_1sdp"
        android:src="@drawable/line"
        android:background="@android:color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15ssp"
            android:textColor="#4CA7A7"
            android:id="@+id/turkish"
            android:text="التركيه"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15ssp"
            android:id="@+id/english"
        android:layout_marginLeft="@dimen/_25sdp"
        android:textColor="#4CA7A7"
        android:text="الانجليزيه"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arabix"
            android:textSize="@dimen/_15ssp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:textColor="#4CA7A7"
            android:text="العربيه"/>
    </LinearLayout>


</LinearLayout>